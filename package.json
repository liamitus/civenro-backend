{
  "name": "civenro-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "npm run dev:db && nodemon src/index.ts",
    "dev:db": "docker compose up -d && npx prisma db seed",
    "build": "prisma generate && tsc",
    "start": "node dist/index.js",
    "test": "dotenv -e .env.test -- bash -c 'export NODE_ENV=test && npm run test:db:start && npm run test:wait && npm run test:db:prepare && jest && npm run test:db:stop'",
    "test:debug": "dotenv -e .env.test -- bash -c 'export NODE_ENV=test && npm run test:db:start && npm run test:wait && npm run test:db:prepare && node --inspect-brk ./node_modules/.bin/jest --runInBand --detectOpenHandles'",
    "test:db:start": "dotenv -e .env.test -- docker compose -f docker-compose.test.yml up -d",
    "test:db:stop": "docker compose -f docker-compose.test.yml down --volumes",
    "test:db:prepare": "npx prisma migrate dev --name init-test",
    "test:wait": "for i in {1..10}; do pg_isready -h localhost -p 5433 -U postgres && break || sleep 3; done",
    "seed": "ts-node prisma/seed.ts",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "migrate": "prisma migrate deploy && prisma db seed",
    "test:db:psql": "psql -h localhost -p 5433 -U postgres -d civenro_test"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.21.1",
    "axios": "^1.7.7",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.7",
    "express": "^4.21.1",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^5.21.1",
    "qs": "^6.13.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^18.17.19",
    "@types/supertest": "^6.0.2",
    "dotenv-cli": "^7.4.4",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.2",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.18.1"
  }
}
